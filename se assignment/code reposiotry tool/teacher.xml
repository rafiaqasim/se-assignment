<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFFFFF"
    tools:context="com.example.user.shinstitute.Teacher">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teacher's Name"
        android:textColor="#000000"
        android:paddingRight="20dp"
        android:textStyle="bold|italic"
        android:id="@+id/Teachername"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="â€¢"
        android:id="@+id/textView2"
        android:textStyle="bold|italic"
        android:textColor="#ffffff"
        android:textSize="50sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_lecture"
        android:id="@+id/butuploadLec"

        android:textAlignment="textStart"
        android:background="@drawable/oval"
        android:paddingRight="20dp"
        android:paddingLeft="10dp"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_above="@+id/button2"
        android:layout_alignStart="@+id/Teachername" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Upload_MCQs"
        android:id="@+id/button2"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:background="@drawable/oval"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:textAlignment="textStart"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/butuploadLec" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Logoutteacher"
        android:background="@drawable/oval"
       android:paddingRight="20dp"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:id="@+id/button3"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="50dp"
         />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/images"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
